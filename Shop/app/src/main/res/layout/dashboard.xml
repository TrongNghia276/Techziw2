<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:background="@color/gray_100"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:id="@+id/slide_1"
        android:layout_height="wrap_content">

        <com.denzcoskun.imageslider.ImageSlider
            android:layout_width="wrap_content"
            android:id="@+id/slide1"
            app:iss_auto_cycle="true"
            app:iss_delay="1"
            app:iss_period="2000"
            app:iss_title_background="@color/invisible"
            android:layout_height="350dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shirt"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:id="@+id/Shirt"
            />
        <com.denzcoskun.imageslider.ImageSlider
            android:layout_width="wrap_content"
            android:id="@+id/slide123"
            app:iss_auto_cycle="true"
            app:iss_delay="1"
            app:iss_period="2500"
        android:layout_marginTop="30dp"
            app:iss_title_background="@color/invisible"
            app:iss_corner_radius="20"
            android:layout_height="130dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SmartPhones"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:id="@+id/smartphonerecy"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Arrival"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:padding="10dp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:id="@+id/imageban"
                android:src="@drawable/gradient"
                />
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:padding="10dp">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Samsung Galaxy Note 10"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:padding="5dp"

                />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$584"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/O_700"
                    android:fontFamily="@font/poppins"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shop Now"
                    android:textAlignment="center"
                   android:layout_marginRight="10dp"
                    android:layout_weight="0.3"
                    android:id="@+id/shopclick"
                    android:textColor="@color/O_700"
                    android:background="@drawable/edit_text_bg"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shoes"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:id="@+id/Shoes"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.core.widget.NestedScrollView>