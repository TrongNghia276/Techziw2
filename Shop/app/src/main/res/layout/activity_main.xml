<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


      <androidx.appcompat.widget.AppCompatImageView
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:src="@drawable/ic_store"
          android:background="?android:attr/selectableItemBackground"
    app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHeight_percent="0.085"
          app:layout_constraintHorizontal_bias="0"
            android:scaleType="centerInside"
android:layout_marginLeft="10dp"
          android:paddingBottom="16dp"
          app:layout_constraintWidth_percent=".17"
          android:id="@+id/dashb"
          app:layout_constraintVertical_bias="1"
          />
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintVertical_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/dashb"

        android:id="@+id/view_paper_main"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"

    android:id="@+id/dasha"
        android:src="@drawable/ic_dash_active"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dashb"
        app:layout_constraintEnd_toStartOf="@+id/hoticon"
        app:layout_constraintHeight_percent="0.085"
        app:layout_constraintWidth_percent=".17"
        app:layout_constraintVertical_bias="1"
        android:paddingBottom="16dp"
        android:background="?android:attr/selectableItemBackground"
    />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/dasha"
        android:fontFamily="@font/poppins"
        android:textColor="@color/O_700"
        android:id="@+id/textdasha"
        android:text="Home"
        app:layout_constraintStart_toStartOf="@id/dasha"
        app:layout_constraintEnd_toEndOf="@+id/dasha"
        app:layout_constraintVertical_bias=".9"
        app:layout_constraintBottom_toBottomOf="@id/dasha"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/dashb"
        android:fontFamily="@font/poppins"
        android:textColor="@color/gray_700"
        android:id="@+id/textdashb"
        android:text="Store"
        app:layout_constraintStart_toStartOf="@id/dashb"
        app:layout_constraintEnd_toEndOf="@+id/dashb"
        app:layout_constraintVertical_bias=".9"
        app:layout_constraintBottom_toBottomOf="@id/dashb"
        />
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:lottie_rawRes="@raw/hot"
        app:lottie_autoPlay="true"

        app:lottie_loop="true"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent=".2"
        android:id="@+id/hoticon"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="5dp"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:id="@+id/dashchat"
        android:src="@drawable/ic_chat"
        android:background="?android:attr/selectableItemBackground"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hoticon"
        app:layout_constraintEnd_toStartOf="@+id/accounticon"
        app:layout_constraintHeight_percent="0.085"
        app:layout_constraintWidth_percent=".17"
        app:layout_constraintVertical_bias="1"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/dashchat"
        android:fontFamily="@font/poppins"
        android:textColor="@color/gray_700"
        android:text="Cart"
        android:id="@+id/textdashchat"
        app:layout_constraintStart_toStartOf="@id/dashchat"
        app:layout_constraintEnd_toEndOf="@+id/dashchat"
        app:layout_constraintVertical_bias=".9"
        app:layout_constraintBottom_toBottomOf="@id/dashchat"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/accounticon"
        android:layout_marginRight="10dp"
        android:background="?android:attr/selectableItemBackground"

    app:layout_constraintHorizontal_bias="1"
        android:src="@drawable/ic_acc_noactive"
        android:scaleType="centerInside"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.085"
        app:layout_constraintWidth_percent=".17"
        app:layout_constraintVertical_bias="1"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/accounticon"
        android:fontFamily="@font/poppins"
        android:id="@+id/TextAcc"
        android:textColor="@color/gray_700"
        android:text="Account"
        app:layout_constraintStart_toStartOf="@id/accounticon"
        app:layout_constraintEnd_toEndOf="@+id/accounticon"
        app:layout_constraintVertical_bias=".9"
        app:layout_constraintBottom_toBottomOf="@id/accounticon"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66FFFFFF"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout"
        app:layout_constraintTop_toTopOf="@+id/imageView">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="center"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/loading"
                app:lottie_scale="0.5" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>