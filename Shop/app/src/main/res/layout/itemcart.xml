<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="350dp"
        android:layout_height="120dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/imagecart"
            android:src="@drawable/logo"
            />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:id="@+id/titlecart"
                android:textColor="@color/black"
                android:padding="5dp"
                android:lines="2"
                android:maxLines="2"
                android:text="Samsung galaxy S21"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/O_700"
                android:id="@+id/pricecart"
                android:fontFamily="@font/poppins_semibold"
                android:text="$1000"
                />
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/detelequa"
                android:background="@color/gray_100"
                android:text="-"
                android:gravity="center
"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="20dp"
                />
                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:lines="1"
                    android:maxLines="3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="30dp"
                    android:id="@+id/quality"
                    android:inputType="numberDecimal"
                    android:paddingRight="30dp"
                    android:background="@drawable/edit_text_bg"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="20dp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/addqua1"
                android:gravity="center"

                android:background="@color/gray_100"
                android:text="+"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="20dp"
                />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btndelete"
                    android:paddingLeft="10dp"
                    android:gravity="center"
                    android:id="@+id/deletecart"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/O_700"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10dp"

                    android:text="Delete"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>